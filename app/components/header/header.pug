mixin header()
  +b.header&attributes(attributes)
    .container
      +e.A.logo(href="#" target="_blank")
        img(src="assets/images/logo.svg" alt="@@")
        span спецпроекты

      +e.P.text Адвокатская газета Орган Федеральной палаты адвокатов РФ

      +e.A.link(href="#")
        +icon('mail')
        span Обратная связь

mixin ui-kit-header()
  +ui-section
    +ui-section-head
      +ui-title Шапка
      +ui-path
        p Компонент: components/header/header

    +ui-section-content()
      +header

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
